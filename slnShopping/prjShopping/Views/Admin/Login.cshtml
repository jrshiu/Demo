@model prjShopping.Models.tAdmin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理者</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    @using (Html.BeginForm())
    {
    <div class="container" style="margin-top:30px;">
        <div class="panel panel-primary">
            <div class="panel-heading">管理者登入</div>
            <div class="panel-body">
                <div class="form-group">
                    帳號：
                    @Html.EditorFor(model => model.fUId, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">

                        密碼：
                        @Html.EditorFor(model => model.fPwd, new { htmlAttributes = new { @class = "form-control", type="password" } })

                </div>

                <div class="form-group">
                        <input type="submit" value="登入" class="btn btn-primary" />
                </div>

            </div>
        </div>
        <p></p>
        @if (ViewBag.Msg != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Msg
            </div>
        }
    </div>
    }


</body>
</html>
